<table class="hits table table-bordered">
  <thead>
  <tr style="background-color: #eee">
    <th style="width: 26px"></th>
    <% if category.name == 'all' %>
      <th class="status" scope="col">HTTP<br/>Status</th>
    <% end %>
    <th scope="col">Path</th>
    <th class="count" scope="col">Hits</th>
    <th style="width: 100px">Action</th>
  </tr>
  <tr style="background-color: #f9f9f9; box-shadow: rgba(0,0,0,0.5) 0 2px; z-index: 1; position: relative;">
    <td style="text-align: center">
      <label style="display: block; width: 26px; margin-top: -2px; margin-bottom: 0"><input type="checkbox" class="js-check-all">
    </td>
    <td colspan="<% if category.name == 'all' %>4<% else %>3<% end %>">
      <div class="btn-group">
        <% unless category.name == 'redirects' %>
          <a href="#redirect-modal" class="btn" data-toggle="modal">Redirect selected paths</a>
        <% end %>
        <% unless category.name == 'archives' %>
          <a href="#archive-modal" class="btn" data-toggle="modal">Archive selected paths</a>
        <% end %>
      </div>
    </td>
  </tr>
  </thead>
  <tbody>
  <% max = hits.first.count %>

  <% hits.each do |hit| %>
    <tr>
      <td style="text-align: center">
        <label style="display: block; width: 26px;  margin-bottom: 0; margin-top: -2px"><input type="checkbox" class="js-check"></label>
      </td>
      <% if category.name == 'all' %>
        <td class="status">
          <abbr title="<%= "#{hit.http_status} â€” #{Rack::Utils::HTTP_STATUS_CODES[hit.http_status.to_i]}" %>">
            <%= hit.http_status %>
          </abbr>
        </td>
      <% end %>
      <td class="remove-padding">
        <div class="bar-chart-wrap">
          <%= render partial: 'bar_chart_row', locals: { count: hit.count, max: max, status: hit.http_status } %>
          <strong class="breakable path"><%= link_to_hit(hit, @site.default_host) %></strong>
        </div>
      </td>
      <td class="count"><%= number_with_delimiter hit.count %></td>
      <td>
        <% if hit.http_status == '404' %>
          <a href="#" class="btn btn-mini"><i class="icon-plus"></i> Add mapping</a>
        <% end %>
        <% if hit.http_status == '301' || hit.http_status == '410' %>
          <a href="#" class="btn btn-mini"><i class="icon-pencil"></i> Edit mapping</a>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
