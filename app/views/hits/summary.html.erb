<% content_for :page_title, "#{@site.abbr} Analytics" %>
<%= breadcrumb(@site.default_host.hits.build) %>

<div class="page-title">
  <h1>
    <span class="small"><%= @site.default_host.hostname %></span>
    Analytics
  </h1>
</div>

<%= render partial: 'hits_tabs', locals: { active: 'Summary' } %>

<%= render partial: 'hits_time_period_dropdown' %>

<% if any_totals_for?(@point_categories) %>
  <%= render partial: 'hits_graph', locals: { point_categories: @point_categories } %>
<% end %>

<div id="archive-modal" class="modal hide">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Archive paths</h3>
  </div>
  <div class="modal-body">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Original paths</th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td><a href="#">/about</a></td>
      </tr>
      <tr>
        <td><a href="#">/about/us</a></td>
      </tr>
      <tr>
        <td><a href="#">/about/us/the-team/pages.aspx</a></td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="modal-footer">
    <a href="#" data-dismiss="modal" class="btn">Cancel</a>
    <a href="#" data-dismiss="modal" class="btn btn-success">Save</a>
  </div>
</div>

<div id="redirect-modal" class="modal hide">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Redirect paths</h3>
  </div>
  <div class="modal-body">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Original paths</th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td><a href="#">/about</a></td>
      </tr>
      <tr>
        <td><a href="#">/about/us</a></td>
      </tr>
      <tr>
        <td><a href="#">/about/us/the-team/pages.aspx</a></td>
      </tr>
      </tbody>
    </table>
    <div>
      <label for="redirect-to">Redirect to</label>
      <input type="text" id="redirect-to">
    </div>
  
  </div>
  <div class="modal-footer">
    <a href="#" data-dismiss="modal" class="btn">Cancel</a>
    <a href="#" data-dismiss="modal" class="btn btn-success">Save</a>
  </div>
</div>

<% @sections.each do |category| %>
  <% if category.hits.any?  %>
    <%= render partial: 'summary_section', locals: { category: category } %>
  <% end  %>
<% end %>

<% if no_hits_for_any?(@sections) %>
  <p class="no-content no-content-bordered">
    There are no known hits for the <%= @site.abbr %> summary <%= @period.no_content %>.
  </p>
<% end  %>

<script>GOVUK.Mappings.toggles()</script>
